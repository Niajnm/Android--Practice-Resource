<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center|center_vertical"

    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textViewHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8sp"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#00D4D4"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="normal" />


    <Button
        android:id="@+id/buttonHello"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#999999"
        android:text="@string/bangladesh"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="CHINA" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="@string/usa"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:text="canada"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="UK"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/button88"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nanjing" />

    <Button
        android:id="@+id/button99"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="south" />

    <Button
        android:id="@+id/button999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:onClick="showMsg"
        android:text="Button" />

    <Button
        android:id="@+id/button8888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showMsg"
        android:backgroundTint="#C31717"
        android:text="Button" />

    <Button
        android:id="@+id/buttonLogin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:drawableRight="@drawable/enter"
        android:text="login"
        android:textColor="@color/teal_700"/>

</LinearLayout>